<!DOCTYPE html>
<html>
<head>
    <!-- Use the 'title' property to render a page title  -->
    <title><%= title %></title>
    <link rel="stylesheet" type="text/css" href="css/loginstyle.css" />
    <link rel="stylesheet" type="text/css" href="css/display.css" />

</head>
<body>
  	<!-- Display flash messages  -->
	<% for(var i in messages) { %>
	   <div class="flash"><%= messages[i] %></div>
	<% } %>

	<!-- Render the signin form  -->
    <form action="/signin" method="post">
        <div class="outer_container">
            <h2> Login to evaluate the course:</h2>

            <div class="container">
                <label>Username: </label>
                <input type="text" class="fields" name="username" />
            </div>
            <div class="container">
                <label>Password:</label>
                <input type="password" class="fields" name="password" />
            </div>
            <div class="container">
                <button type="submit" class="form-field-no-caption">Login</button>
            </div>
        </div>
    </form>

</body>
</html>